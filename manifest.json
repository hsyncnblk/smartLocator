{
  "manifest_version": 3,
  "name": "Smart Locator Pro",
  "version": "1.0",
  "description": "Dinamik ID'leri filtreleyen ve Playwright/Cypress uyumlu locator üreten akıllı asistan.",
  "permissions": ["activeTab", "scripting", "storage"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Locator Oluştur"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}